<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/the_linux_game_menu"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/thelinuxgame_background_dark"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/menu_hamburger"
            android:layout_width="?actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:src="@drawable/ic_menu"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.thelinuxgameItem"
        android:layout_marginTop="@dimen/thelinuxgame_medium_margin">

        <ImageView
            style="@style/ImageView.thelinuxgameItem"
            android:src="@drawable/ic_profile"/>

        <TextView
            style="@style/TextView.thelinuxgameItem"
            android:text="@string/profile"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.thelinuxgameItem">

        <ImageView
            style="@style/ImageView.thelinuxgameItem"
            android:src="@drawable/ic_feed"/>

        <TextView
            style="@style/TextView.thelinuxgameItem"
            android:text="@string/feed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_group"
        style="@style/LinearLayout.thelinuxgameItem">

        <ImageView
            style="@style/ImageView.thelinuxgameItem"
            android:src="@drawable/ic_activity_active"/>

        <TextView
            style="@style/TextView.thelinuxgameItem.Selected"
            android:text="@string/activity"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/settings_group"
        style="@style/LinearLayout.thelinuxgameItem">

        <ImageView
            style="@style/ImageView.thelinuxgameItem"
            android:src="@drawable/ic_settings"/>

        <TextView
            style="@style/TextView.thelinuxgameItem"
            android:text="@string/settings"/>
    </LinearLayout>
</LinearLayout>