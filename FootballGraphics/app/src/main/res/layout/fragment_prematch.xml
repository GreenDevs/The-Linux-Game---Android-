<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clickable="true"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:background="@color/darkBlue"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="20"
                android:src="@drawable/logo_xml"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_weight="60"
                android:src="@drawable/laliga"
                android:tint="@android:color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/rss"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="20"
                android:layout_gravity="bottom"
                android:src="@drawable/fcb"
                />

            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="40">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:layout_gravity="center"
                android:layout_weight="40">
                <TextView
                    android:layout_width="0dp"
                    android:text="FCB"
                    android:textSize="25sp"
                    android:textColor="@color/yellow_barca"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="VS"
                    android:textSize="25sp"
                    android:textColor="@color/yellow_barca"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="RMA"
                    android:textSize="25sp"
                    android:textColor="@color/yellow_barca"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"/>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:layout_gravity="center"
                    android:layout_weight="40">
                    <TextView
                        android:layout_width="0dp"
                        android:text="16:15 CET"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"/>
                    <org.footballtimeline.footballgraphics.utils.OneCuleTextView
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:text="|"
                        android:textSize="30sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:text="21:00 NPT"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="20"
                android:src="@drawable/real"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="03 DECEMBER 2016"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="CAMP NOU STADIUM"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="TV"
                android:textSize="20sp"
                android:textColor="@color/yellow_barca"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_weight="35"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"/>

            <TextView
                android:layout_width="0dp"
                android:text="ONLINE"
                android:textSize="20sp"
                android:textColor="@color/yellow_barca"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="35"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <org.footballtimeline.footballgraphics.utils.FontelloTextView
                android:layout_width="0dp"
                android:text="SONY SIX\nSONY SIX HD(WATCH)\nbeIN SPORTS ESPN CANAL+\nSKY SPORTS"
                android:textSize="15sp"
                android:textColor="@color/yellow_barca"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_weight="40"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"/>

            <org.footballtimeline.footballgraphics.utils.OneCuleThinTextView
                android:layout_width="0dp"
                android:text="SONYLIV.COM\nIFIRSTROW.EU\nFIRSTROWSPORTS.EU\nBARCELONASTREAM.COM"
                android:textSize="15sp"
                android:textColor="@color/yellow_barca"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

        </LinearLayout>
        <include
            layout="@layout/footer"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/saveAsImage"
        android:layout_gravity="bottom"
        android:text="save image"
        android:layout_height="wrap_content"/>
</FrameLayout>
